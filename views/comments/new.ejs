<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        
        <h1 style="text-align: center;">Add New Comment to <%= campground.name %></h1>
        <div class="forms">
            <form action="/campgrounds/<%= campground.id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Text">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-block btn-lg btn-primary">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
        

        
    </div>
</div>
<%- include("../partials/footer") %>