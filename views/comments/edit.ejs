<%- include("../partials/header") %>

<div class="d-flex container justify-content-center">
    <div class="row justify-content-center">
        
        <div class="col-md-12 text-center">
            <h1 style="text-align: center;">Edit Comment</h1>
        </div>
       
        <div class="col-7 mt-4">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment.id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-block btn-lg btn-primary">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
        

        
    </div>
</div>
<%- include("../partials/footer") %>