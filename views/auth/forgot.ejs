<%- include("../partials/header") %>

<div class="container">

    <div class="row justify-content-center align-content-center sign-form">
        <div class="col-12 col-lg-8 text-center">
            <h1 >Reset password</h1>
            <div class="forms">
                <form action="/forgot" method="POST">
                    <div class="form-group">
                        <% if(!currentUser){ %>
                            <input class="form-control" type="text" name="email" placeholder="Email" required autofocus>
                        <% }else{ %>
                            <input class="form-control" type="text" name="email" value="<%= currentUser.email %>" required autofocus>
                        <% } %>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block">Resset Password</button>
                    </div>
                </form>
                <a class="float-left" href="/campgrounds">Go Back!</a>
            </div>
        </div>
        
    </div>
</div>

<%- include("../partials/footer") %>