<%- include("../partials/header") %>

<div class="d-flex container justify-content-center">
    <div class="row justify-content-center">
        
        <div class="col-12 text-center">
            <h1>Edit <%= campground.name %></h1>
        </div>
        
        <div class="col-12 mt-4">
            <form action="/campgrounds/<%= campground.id %>/?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name" class="labels"><i class="fas fa-campground"></i> Name: </label>
                    <input id="name" class="form-control" type="text" name="campground[name]" value="<%= campground.name %>" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="price" class="labels"><i class="fas fa-tag"></i> Price: </label>
                    <input id="price" class="form-control" type="number" name="campground[price]" value="<%= campground.price %>" placeholder="Price" min="0" step="0.01">
                </div>
                <div class="form-group">
                    <label for="image" class="labels"><i class="fas fa-image"></i> Image: </label>
                    <input id="image" class="form-control" type="text" name="campground[image]" value="<%= campground.image %>" placeholder="Image">
                    <div id="image-upload" class="border mt-1">
                        <small id="image test" class="form-text text-muted small">Or upload your own file: </small>
                        <input id="test" class="text-muted small" type="file" id="image" name="imageFile" accept="image/*">
                    </div>
                </div>
                <div class="form-group">
                    <label for="location" class="labels"><i class="fas fa-location-arrow"></i> Location: </label>
                    <input id="location" class="form-control" type="text" name="location" value="<%= campground.location %>" placeholder="Address">
                </div>
                <div class="form-group">
                    <label for="description" class="labels"><i class="fas fa-paragraph"></i> Description: </label>
                    <textarea id="description" class="form-control" name="campground[description]" rows="4" placeholder="Description"><%= campground.description %></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-block btn-lg btn-primary">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground.id %>">Go Back</a>
        </div>
        

        
    </div>
</div>
<%- include("../partials/footer") %>